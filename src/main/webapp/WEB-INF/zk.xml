<?xml version="1.0" encoding="UTF-8"?>
<zk>
    <!-- ============================================== -->
    <!-- LISTENER PARA SPRING (NO variable-resolver)   -->
    <!-- ============================================== -->
    <listener>
        <listener-class>org.zkoss.zkplus.spring.DelegatingVariableResolver</listener-class>
    </listener>

    <!-- ============================================== -->
    <!-- CONFIGURACIÓN DEL CLIENTE                      -->
    <!-- ============================================== -->
    <client-config>
        <debug-js>true</debug-js>
    </client-config>

    <!-- ============================================== -->
    <!-- CONFIGURACIÓN DEL SISTEMA                      -->
    <!-- ============================================== -->
    <system-config>
        <ui-factory-class>org.zkoss.zk.ui.http.SerializableUiFactory</ui-factory-class>
        <max-desktops-per-session>20</max-desktops-per-session>
        <max-upload-size>10485760</max-upload-size>
    </system-config>

    <!-- ============================================== -->
    <!-- AUTOWIRING                                     -->
    <!-- ============================================== -->
    <library-property>
        <name>org.zkoss.zk.ui.composer.autowire.enabled</name>
        <value>true</value>
    </library-property>

    <library-property>
        <name>org.zkoss.bind.composer.autowire.enabled</name>
        <value>true</value>
    </library-property>

    <!-- ============================================== -->
    <!-- SPRING INTEGRATION                             -->
    <!-- ============================================== -->
    <library-property>
        <name>org.zkoss.zk.ui.spring.EnableSpringScopes</name>
        <value>true</value>
    </library-property>

    <!-- ============================================== -->
    <!-- SESIÓN                                         -->
    <!-- ============================================== -->
    <session-config>
        <session-timeout>-1</session-timeout>
    </session-config>
</zk>